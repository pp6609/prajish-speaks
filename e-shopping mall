FOR FASHION PLANET:
FOR CALCULATE BUTTON:
int a = Integer.parseInt(jTextField2.getText());
        if(jRadioButton1.isSelected());
        { double b = (a*1000);
          double e = (b*0.30);
          double f = (b-e);
          jTextField4.setText("" + f);
        }
        if(jRadioButton2.isSelected());
        { double c = (int)(a*2000);
          double g = c*0.35;
          double h = c-g;
          jTextField4.setText("" +h);
        }
        if(jRadioButton3.isSelected());
        { double d = (int)(a*2500);
          double i = d*0.45;	
          double j = d-i;
          jTextField4.setText("" +j);
        }
        jTextField4.setEditable(false);
        jTextField3.setEditable(false);
