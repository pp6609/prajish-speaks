FOR CREATE ACCOUNT PAGE:

import java.sql.DriverManager;
import com.mysql.jdbc.Connection;
import com.mysql.jdbc.Statement;
import javax.swing.JOptionPane;
String name = jTextField1.getText();
        String phoneno = jTextField2.getText();
        String email = jTextField3.getText();
        String password = jTextField4.getText();
        try
        { Class.forName("java.sql.DriverManager");
          Connection con = (Connection)DriverManager.getConnection("jdbc:mysql://localhost:3306/prajish","root","");
          Statement stmt = (Statement)con.createStatement();
          String query = "INSERT INTO customer VALUES('"+name+"','"+phoneno+"','"+email+"','"+password+"');";
          stmt.executeUpdate(query);
        }
        catch(Exception e)
        { JOptionPane.showMessageDialog(this,e.getMessage());

        }
         new User_login().setVisible(true);
         JOptionpane.showMessageDialog(this,"your account has been created");
