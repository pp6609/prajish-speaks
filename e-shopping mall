FOR BILLING PAGE:
FOR OVERVIEW BUTTON:
import javax.swing.JOptionPane;
import java.sql.DriverManager;
import com.mysql.jdbc.Connection;
import com.mysql.jdbc.Statement;
import java.sql.ResultSet;
String name = jTextField1.getText();
       if(name.isEmpty())
           JOptionPane.showMessageDialog(this,"name not entered");
       else
       {
           try
           { Class.forName("java.sql.DriverManager");
             Connection con = (Connection)DriverManager.getConnection("jdbc:mysql://localhost:3306/prajish","root","");
             Statement stmt = (Statement)con.createStatement();
             String query = "SELECT sum(amount) from bill where name='"+name+"';";
                 Statement stmt1 = (Statement)con.createStatement();
            String query1 = "SELECT amount from bill where name='"+name+"';";
             ResultSet rs = stmt.executeQuery(query);
             ResultSet rm = stmt1.executeQuery(query1);
             int Found=0;
             while(rs.next())
             { String amount = rs.getString("sum(amount)");
                jTextField5.setText(amount);
               Found++;

             }
             if(Found==0)
             {  JOptionPane.showMessageDialog(this,"Sorry!! no such name in contact list");
                
             }
             int Found1=0;
           while(rm.next())
            {  String a = rm.getString("amount");

              jTextArea1.append("" + a +"\n" +"\n" +"\n");

             Found1++;
           }
             
           }
           catch(Exception e)
           {
               JOptionPane.showMessageDialog(this,e.getMessage());
           }



       }

